{
  "name": "Self Control App",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Kevin Jiao's senior project",
  "homepage_url": "https://obscure-dawn-82138.herokuapp.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/options_custom/lib/store.js", "src/browser_action/timer.js", "src/bg/background.js", "src/browser_action/lib/block.js"],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "activeTab",
    "background",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "history",
    "idle",
    "notifications",
    "storage",    
    "tabs",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"

      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    },
    {
      "html": ["src/browser_action/browser_action.html"],
      "js": ["src/browser_action/app.js", "src/browser_action/timer.js", "src/browser_action/lib/jquery-3.1.1.min.js", "src/browser_action/lib/block.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}